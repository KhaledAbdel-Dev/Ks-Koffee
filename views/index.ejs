<!--
  This component uses @tailwindcss/forms

  yarn add @tailwindcss/forms
  npm install @tailwindcss/forms

  plugins: [require('@tailwindcss/forms')]
-->

<div class="b mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-lg">
    <h1 class="text-center text-2xl font-bold text-black sm:text-3xl">
      Get started with your order
    </h1>

    <form action="/post/createPost" method="POST" class=" max-w-screen-xl mt-6 mb-0 space-y-4 rounded-lg p-8 shadow-color-white shadow-2xl">
      <p class="text-lg font-medium">What's your name?</p>

      <div>
        <div class="relative mt-1">
          <input
            type="text"
            name="orderName"
            class="w-full rounded-lg border-gray-200 p-4 pr-12 text-sm shadow-sm"
            placeholder="Enter order name"
          />
        </div>
      </div>


      <fieldset>
        <legend for="size" class="contents text-base font-medium text-gray-900">Drink Size</legend>

        <div class="mt-4 space-y-4">
          <div class="flex items-center">
            <input name="size" value="S" type="radio" class="h-4 w-4 border-gray-300 text-green-600 focus:ring-green-500">
            <label for="size" class="ml-3 block text-sm font-medium text-gray-700">Small</label>
          </div>
          <div class="flex items-center">
            <input name="size" value="M" type="radio" class="h-4 w-4 border-gray-300 text-green-600 focus:ring-green-500">
            <label for="size" class="ml-3 block text-sm font-medium text-gray-700">Medium</label>
          </div>
          <div class="flex items-center">
            <input name="size" value="L" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="size" class="ml-3 block text-sm font-medium text-gray-700">Large</label>
          </div>
          <div class="flex items-center">
            <input name="size" value="XL" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="size" class="ml-3 block text-sm font-medium text-gray-700">X-Large</label>
          </div>
        </div>
      </fieldset>

      <div class="col-span-6 sm:col-span-3">
        <label for="drink" class="contents text-base font-medium text-gray-900">Select a Drink</label>
        <select name="koldDrinks" id="cold" autocomplete="country-name" class="mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
          <option value="">Kold Drinks</option>
          <option value="Kopi Luwak Kold Brew">Special: Kopi Luwak Kold Brew</option>
          <option value="Iced Chai Latte">Iced Chai Latte</option>
          <option value="Iced Koffee">Iced Koffee</option>
        </select>
        <select name="hotDrinks" id="hot" autocomplete="country-name" class="mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
          <option value="">Hot Drinks</option>
          <option value="Chai Latte">Chai Latte</option>
          <option value="Kafe Latte">Kafe Latte</option>
          <option value="Kappuccino">Kappuccino</option>
          <option value="Amerikano">Amerikano</option>
          <option value="Espresso">Espresso</option>
          <option value="Moka">Moka</option>
        </select>
        <select name="teas" id="tea" autocomplete="country-name" class="mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
          <option value="">Teas</option>
          <option value="English Breakfast">English Breakfast</option>
          <option value="Earl Grey">Earl Grey</option>
          <option value="Jasmine Hibiscus">Jasmine Hibiscus</option>
          <option value="Plum Oolong">Plum Oolong</option>
          <option value="Tazo Mint">Tazo Mint</option>
        </select>
      </div>

      <fieldset>
        <legend for="milk" class="contents text-base font-medium text-gray-900">Milk Options</legend>

        <div class="mt-4 space-y-4">
          <div class="flex items-center">
            <input name="milk" value="Cream" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="milk" class="ml-3 block text-sm font-medium text-gray-700">Cream</label>
          </div>
          <div class="flex items-center">
            <input name="milk" value="2%" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="milk" class="ml-3 block text-sm font-medium text-gray-700">2% milk</label>
          </div>
          <div class="flex items-center">
            <input name="milk" value="Oat" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="milk" class="ml-3 block text-sm font-medium text-gray-700">Oat</label>
          </div>
          <div class="flex items-center">
            <input name="milk" value="Almond" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="milk" class="ml-3 block text-sm font-medium text-gray-700">Almond</label>
          </div>
          <div class="flex items-center">
            <input name="milk" value="NO" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="milk" class="ml-3 block text-sm font-medium text-gray-700">Black</label>
          </div>
        </div>
      </fieldset>

      <div class="px-4 py-3 text-right sm:px-6">
        <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-green-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">Submit Order</button>
      </div>

    </div>
    

<%- include('partials/footer') -%>